<div class="row clearfix">
	<% if task.completed? %>
		<div class="complete">
			<%= link_to complete_project_task_path(@project, task.id), method: :patch do %>
			<i class="fa fa-check" aria-hidden="true"></i>

			<% end %>
		</div>
	<div class="todo_item">
		<p style="opacity: 0.4"><strike><%= task.content %></strike></p>
	</div>
	<div class="trash">
		<%= link_to project_task_path(@project, task.id), method: :delete, data: { confirm: "Are you sure?" } do %>
			<i class="fa fa-trash" aria-hidden="true"></i>

		<% end %>
	</div>

	<% else %>
		<div class="complete">
			<%= link_to complete_project_task_path(@project, task.id), method: :patch do %>
			<i class="fa fa-check"></i>
			<% end %>
		</div>
		<div class="todo_item">
			<p><%= task.content %></p>
		</div>
		<div class="trash">
			<%= link_to "Delete", project_task_path(@project, task.id), method: :delete, data: { confirm: "Are you sure? } "} %>
		</div>
	<% end %>
</div>

